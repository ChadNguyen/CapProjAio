{% extends 'base.jinja' %}

{% block content %}
{% for post in posts %}
<div class="card mb-4">
<div class="card-body">
<h2 class="card-title">{{ post.author.username }}</h2>
<p class="card-text">{{ post.body }}</p>
</div>
<div class="card-footer text-muted">
{{ post.created_at }}
</div>
</div>
{% endfor %}
{% endblock %}